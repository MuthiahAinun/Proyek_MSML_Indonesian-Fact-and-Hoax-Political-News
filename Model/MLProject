name: hoax-detection

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      epochs: {type: int, default: 3}
      batch_size: {type: int, default: 16}
      learning_rate: {type: float, default: 5e-5}
    command: >
      python train_and_log.py
      --epochs {epochs}
      --batch_size {batch_size}
      --learning_rate {learning_rate}
